.container
  .row
    article.col-sm-12.col-md-12.col-lg-12.sortable-grid.ui-sortable
      #wid-id-0
        header(role='heading')
          h2 
          p
        // widget div
        div(role='content')
          // widget content
          .widget-body
            .row
              form#wizard-1(novalidate='novalidate')
                #bootstrap-wizard-1.col-sm-12
                  .form-bootstrapWizard
                    ul.bootstrapWizard.form-wizard
                      li.active(data-target='#step1')
                        a.active(href='#tab1', data-toggle='tab')
                          span.step 1
                          span.title Basic information
                      li(data-target='#step2')
                        a(href='#tab2', data-toggle='tab')
                          span.step 2
                          span.title Billing information
