                      li(data-target='#step4')
                        a(href='#tab4', data-toggle='tab')
                          span.step 4
                          span.title Save Form
                    .clearfix
                  .tab-content
                    #tab1.tab-pane.active
                      br
                      h3
                        strong Step 1 
                        |  - Basic Information
                      .form-actions
                        .row
                          .col-sm-12
                            ul.pager.wizard.no-margin
                              li.previous.disabled
